variable "lifecycle_policy" {
  type = string
  default = <<EOF
{
  "rules": [
    {
      "rulePriority": 1,
      "description": "Expire images older than 30 days",
      "selection": {
        "tagStatus": "any",
        "countType": "sinceImagePushed",
        "countUnit": "days",
        "countNumber": 30
      },
      "action": {
        "type": "expire"
      }
    }
  ]
}
EOF
}
---
 lifecycle_policy {
    policy_text = var.lifecycle_policy
  }

resource "aws_ecr_repository" "main" {
  name = var.name

  lifecycle_policy {
    policy_text = var.lifecycle_policy
  }
